{
  "name": "svelte-dropzone-runes",
  "version": "1.0.1",
  "description": "Svelte component for fileupload and file dropzone. Compatible with Svelte 5 Runes",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "pack": "svelte-kit sync && svelte-package && publint"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "typesVersions": {
    ">4.0": {
      "Dropzone.svelte": [
        "./dist/components/Dropzone.svelte.d.ts"
      ]
    }
  },
  "repository": {
    "url": "git+https://github.com/Truirer/svelte-dropzone-runes.git"
  },
  "author": "Truirer",
  "license": "MIT",
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "playwright": "^1.51.1",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.3.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.2.5",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "@sveltejs/package": "^2.0.0",
    "file-selector": "^2.1.2",
    "publint": "^0.3.11"
  },
  "keywords": [
    "svelte",
    "svelte-components",
    "upload",
    "dropzone",
    "file",
    "fileupload",
    "svelte-dropzone-runes",
    "svelte-dropzone",
    "sveltejs",
    "svelte-runes",
    "runes",
    "svelte5",
    "sveltekit",
    "svelte-kit"
  ],
  "files": [
    "dist",
    "README.md",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "main": "./dist/index.js",
  "bugs": {
    "url": "https://github.com/truirer/svelte-dropzone-runes/issues"
  },
  "homepage": "https://github.com/truirer/svelte-dropzone-runes#readme"
}